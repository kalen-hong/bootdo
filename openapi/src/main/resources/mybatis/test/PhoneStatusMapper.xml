<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.test.dao.PhoneStatusDao">
	<resultMap id="BaseResultMap" type="com.test.domain.PhoneStatusDO">
		<id column="id" jdbcType="INTEGER" property="id" />
		<result column="phone_no" jdbcType="VARCHAR" property="phoneNo" />
		<result column="status_info" jdbcType="VARCHAR" property="statusInfo" />
		<result column="status" jdbcType="VARCHAR" property="status" />
		<result column="create_by" jdbcType="VARCHAR" property="createBy" />
		<result column="create_date" jdbcType="TIMESTAMP" property="createDate" />
		<result column="update_by" jdbcType="VARCHAR" property="updateBy" />
		<result column="update_date" jdbcType="TIMESTAMP" property="updateDate" />
	</resultMap>


	<select id="list" resultMap="BaseResultMap">
		select `id`,`phone_no`,`status_info`,`status`,`create_by`,`create_date`,`update_by`,`update_date` from phone_status

		<where>
			<if test="id != null and id != ''"> and id = #{id} </if>
			<if test="iphoneList != null and iphoneList.size()>0"> and phone_no in
				<foreach item="item"  index="index"  open="(" separator=","  close=")" collection="iphoneList">
					#{item}
				</foreach>
			</if>
			<if test="status != null and status != ''"> and status = #{status} </if>
			<if test="createBy != null and createBy != ''"> and create_by = #{createBy} </if>
			<if test="createDate != null and createDate != ''"> and create_date = #{createDate} </if>
			<if test="updateBy != null and updateBy != ''"> and update_by = #{updateBy} </if>
			<if test="updateDate != null and updateDate != ''"> and update_date = #{updateDate} </if>
		</where>
		<choose>
			<when test="sort != null and sort.trim() != ''">
				order by ${sort} ${order}
			</when>
			<otherwise>
				order by id desc
			</otherwise>
		</choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>



</mapper>